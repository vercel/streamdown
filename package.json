{
  "name": "streamdown-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:ui": "turbo run test:ui",
    "check-types": "turbo run check-types",
    "benchmark": "vitest bench --run --config vitest.bench.config.mts",
    "benchmark:parse": "vitest bench --run --config vitest.bench.config.mts benchmarks/parse.bench.ts",
    "benchmark:render": "vitest bench --run --config vitest.bench.config.mts benchmarks/render.bench.tsx",
    "benchmark:memory": "vitest bench --run --config vitest.bench.config.mts benchmarks/memory.bench.tsx",
    "benchmark:streaming": "vitest bench --run --config vitest.bench.config.mts benchmarks/streaming.bench.tsx",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@changesets/cli": "^2.29.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "jsdom": "^26.1.0",
    "marked": "^16.4.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "turbo": "^2.6.1",
    "typescript": "5.9.3",
    "ultracite": "6.3.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18"
  }
}
